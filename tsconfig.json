{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/client/*": ["client/*"],
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/hooks/*": ["hooks/*"],
      "@/icons": ["icons/index.tsx"],
      "@/lib/*": ["lib/*"],
      "@/pages": ["pages/index.page.tsx"],
      "@/pages/*": ["pages/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/svgs": ["svgs/index.tsx"],
      "@/styles/*": ["styles/*"],
      "@/store/*": ["store/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "public",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".gitignore", ".prettierrc", "yarn.lock", "README.md"]
}
